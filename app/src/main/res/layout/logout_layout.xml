<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red">

    <TextView
        android:id="@+id/lo_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Log Out"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:id="@+id/tb"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/lo_lbl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to logout?"
        android:textColor="@color/white"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tb"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:background="@color/black"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel_tv_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cv_1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="20dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/logout_tv_ll"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:padding="10dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:background="@color/white"/>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>